    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_boxs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/student" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middle_boxs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_boxs"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/username_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/name"
                android:background="@null"
                android:gravity="left"
                android:hint="QQ号/手机号/邮箱"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/username_text"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/name"
                android:background="#000000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottom_boxs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middle_boxs"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/pwd" />

            <EditText
                android:id="@+id/userpwd_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/pwd"
                android:background="@null"
                android:gravity="left"
                android:hint="密码"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwdvisiable_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/userpwd_text"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/pwd"
                android:background="#000000" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/danxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_boxs"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="记住密码" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@+id/danxuan"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/login_selector"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="visible" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/ok"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cannot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:text="无法登录"
                android:textSize="14sp"
                android:textColor="@color/pwd_selector"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="12dp"
                />

        </RelativeLayout>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/middle_boxs"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:background="#ffffff"
            android:visibility="gone">
        </ListView>

    </RelativeLayout>
